{
  "name": "low-coupled-microservices",
  "description": "Demonstration of a low coupled microservice system",
  "author": "Patrick van Vuuren <pat_vv@hotmail.com>",
  "version": "1.0.0",
  "engines-strict": true,
  "engines": {
    "node": "^6.9.2"
  },
  "repository": "git@github.com:Serfenia/low-coupled-microservices.git",
  "scripts": {
    "build": "webpack",
    "serve:dev": "NODE_ENV=development && node_modules/.bin/webpack-dev-server --hot --inline --progress --colors --port 8080 --content-base ./build",
    "serve:client": "node app.js",
    "serve:server:1": "SERVER_1_PORT=3001 && node --harmony --use-strict servers/1.js",
    "serve:server:2": "SERVER_2_PORT=3002 && node --harmony --use-strict servers/2.js",
    "serve:gateway": "GATEWAY_PORT=3000 && node --harmony --use-strict servers/gateway.js",
    "postinstall": "node_modules/.bin/webpack"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "autoprefixer": "^7.1.3",
    "autoprefixer-core": "^6.0.1",
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "expose-loader": "^0.7.3",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "history": "4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "js-yaml": "^3.9.1",
    "json-loader": "^0.5.7",
    "jsx-loader": "^0.13.2",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "lodash": "^4.17.4",
    "material-ui": "^0.19.1",
    "postcss-loader": "^2.0.6",
    "react": "^15.6.1",
    "react-addons-update": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.6",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "style-loader": "^0.18.2",
    "transform-loader": "^0.2.4",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1",
    "yaml-loader": "^0.5.0"
  }
}
